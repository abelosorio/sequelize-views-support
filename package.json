{
  "name": "sequelize-mv-support",
  "version": "2.2.0",
  "description": "Adds materialized views support to Sequelize.",
  "main": "build/index.js",
  "scripts": {
    "dependabump": "ncu -u && rm -rf package-lock.json node_modules | true && npm i",
    "test": "npm run test:unit",
    "test:unit": "jest unit.test",
    "test:int": "jest int.test",
    "lint": "tsc --noEmit && eslint --ext '.ts' src/",
    "pretest": "npm run lint",
    "build": "rm -rf ./build && BABEL_ENV=production babel src --out-dir build --source-maps --extensions \".ts\" --ignore \"src/*.test.ts\" && tsc --emitDeclarationOnly",
    "prepublish": "npm run build",
    "commitlint": "commitlint --from master",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sugarandmagic/sequelize-mv-support.git"
  },
  "keywords": [
    "NodeJS",
    "Sequelize",
    "Views",
    "PostgreSQL"
  ],
  "author": "Carrie Beesley <carrie@carriebeesley.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suagrandmagic/sequelize-mv-support/issues"
  },
  "homepage": "https://github.com/sugarandmagic/sequelize-mv-support#readme",
  "dependencies": {
    "pg": "^7.17.0",
    "sequelize": "^6.0.0-beta.4"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/plugin-transform-modules-commonjs": "^7.7.5",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-stage-0": "^7.0.0",
    "@babel/preset-typescript": "^7.7.7",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/commit-analyzer": "^6.3.3",
    "@semantic-release/git": "^7.0.18",
    "@semantic-release/github": "^5.5.5",
    "@semantic-release/npm": "^5.3.5",
    "@semantic-release/release-notes-generator": "^7.3.5",
    "@types/bluebird": "^3.5.29",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.4",
    "@types/pg-pool": "^2.0.1",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "conventional-changelog-angular": "^5.0.6",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.3.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.0",
    "jest": "^24.9.0",
    "npm-check-updates": "^4.0.1",
    "pg-pool": "^2.0.9",
    "prettier": "^1.19.1",
    "semantic-release": "^15.14.0",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "post-merge": "npm ci",
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branch": "master",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "scope": "/core-.*/",
              "release": "minor"
            },
            {
              "type": "refactor",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md",
            "docs/**"
          ]
        }
      ]
    ]
  }
}
